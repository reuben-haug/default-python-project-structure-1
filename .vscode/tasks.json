{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "pytest",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$pytest"]
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "flake8 .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$flake8"]
        },
        {
            "label": "Type Check",
            "type": "shell",
            "command": "mypy .",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$mypy"]
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "black .",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}
